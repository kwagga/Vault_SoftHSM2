resource "aws_security_group" "vault-softhsm-sg" {
  name   = "${random_pet.name.id}-sg"
  vpc_id = aws_vpc.vault-softhsm-vpc.id
  ingress {
    cidr_blocks = [
      "0.0.0.0/0"
    ]
    from_port = 22
    to_port   = 22
    protocol  = "tcp"
  }
  // Terraform removes the default rule
  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}
